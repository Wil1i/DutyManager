<style>
  :root {
    --main-color: #2f25e8;
    --danger: #e3090f;
  }

  input {
    direction: rtl;
    padding: 5px 10px;
    border-radius: 6px;
    border: 1px solid var(--main-color);
    outline: none;
    font-weight: lighter;
    margin: 5px;
  }

  #mainContainer {
    background-color: white;
    width: 500px;
    height: 600px;
    box-shadow: 0 0 10px 1px #ccc;
    border-radius: 10px;
    border: 2px solid var(--main-color);
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  #mainContainer > h1 {
    text-align: center;
    color: var(--main-color);
    border-bottom: 1px solid #ddd;
    padding: 10px 0;
    width: 80%;
  }

  #inputBox {
    width: 90%;
    margin-top: 20px;
    height: 90vh;
  }

  .column {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }

  .size10 {
    width: 99%;
  }

  .size9 {
    width: 89%;
  }

  .size8 {
    width: 79%;
  }

  .size7 {
    width: 69%;
  }

  .size6 {
    width: 59%;
  }

  .size5 {
    width: 49%;
  }

  .size4 {
    width: 39%;
  }

  .size3 {
    width: 29%;
  }

  .size2 {
    width: 19%;
  }

  .size1 {
    width: 9%;
  }

  .c {
    text-align: center;
  }

  .inputBoxHandler {
    height: 90%;
  }

  button {
    padding: 7px 0;
    border: 1px solid var(--main-color);
    border-radius: 10px;
    width: 100%;
    color: white;
    background-color: var(--main-color);
    cursor: pointer;
    transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
  }

  button:hover {
    background-color: transparent;
    color: var(--main-color);
  }

  #containerHandler {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>

<div id="containerHandler" style="display: none">
  <div id="mainContainer">
    <p id="close" class="close">X</p>
    <h1>ویرایش اطلاعات</h1>

    <form
      id="inputBox"
      action="/admin/<%=userInfo.codePersoneli%>?action=edit"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="inputBoxHandler">
        <div class="column">
          <input
            value="<%=userInfo.lastName%>"
            type="text"
            name="lastName"
            placeholder="نام خانوادگی"
            class="size5"
          />
          <input
            value="<%=userInfo.firstName%>"
            type="text"
            name="firstName"
            placeholder="نام"
            class="size5"
          />
        </div>

        <div class="column">
          <input
            value="<%=userInfo.userRank%>"
            type="text"
            name="rank"
            class="size3"
            placeholder="مقام"
          />
          <input value="<%=userInfo.birthday.split(" / ")[0]%>" type="text"
          name="year" class="size1 c" placeholder="سال"> <input
          value="<%=userInfo.birthday.split(" / ")[1]%>" type="text"
          name="month" class="size1 c" placeholder="ماه"> <input
          value="<%=userInfo.birthday.split(" / ")[2]%>" type="text" name="day"
          class="size1 c" placeholder="روز">
        </div>
        <div class="column">
          <input type="file" name="file" name="" id="" class="size10" />
        </div>
      </div>

      <button type="submit" id="submitButton">ثبت</button>
    </form>
  </div>
</div>
